{
    "ollama": {
        "base_url": "http://localhost:11434",
        "model": "gemma3:latest",
        "vision_model": "llava:v1.6",
        "timeout": 20,
        "direct_prompt_timeout": 15,
        "vision_timeout": 25,
        "max_retries": 2,
        "retry_delay": 1,
        "analysis_cooldown_seconds": 8,
        "analysis_enabled": true,
        "streaming_enabled": true,
        "streaming_chunk_size": 1024
    },
    "audio": {
        "sample_rate": 16000,
        "chunk_size": 1024,
        "channels": 1,
        "pause_threshold": 1.0,
        "energy_threshold": 300
    },
    "ui": {
        "overlay_width": 300,
        "overlay_height": 200,
        "transparency": 0.92,
        "position": {"x": 50, "y": 50},
        "overlay": {
            "streaming_delay_ms": 80,
            "streaming_mode": "smooth"
        }
    },
    "analysis": {
        "interval_seconds": 20,
        "max_transcript_length": 3000,
        "min_analysis_length": 20
    },
    "ocr": {
        "enabled": true,
        "max_text_length": 1000,
        "timeout_seconds": 10
    },
    "vision": {
        "enabled": true,
        "model": "llava:v1.6",
        "max_image_size": 1344,
        "image_quality": 85,
        "fallback_to_ocr": true,
        "confidence_threshold": 0.7,
        "combine_with_ocr": true,
        "analysis_priority": "vision_first"
    },
    "screen_monitoring": {
        "interval_seconds": 3,
        "min_change_chars": 80,
        "similarity_threshold": 0.82,
        "visual_change_threshold": 0.25,
        "major_change_threshold": 0.35,
        "confidence_threshold": 0.6,
        "analysis_enabled": true,
        "analysis_cooldown_seconds": 8,
        "use_vision_analysis": true
    },
    "performance": {
        "ui_update_delay": 100,
        "response_truncate_length": 100,
        "max_actions_displayed": 3
    }
} 