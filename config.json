{
    "ollama": {
        "base_url": "http://localhost:11434",
        "model": "gemma3:latest",
        "timeout": 20
    },
    "audio": {
        "sample_rate": 16000,
        "chunk_size": 1024,
        "channels": 1,
        "pause_threshold": 1.0,
        "energy_threshold": 300
    },
    "ui": {
        "overlay_width": 300,
        "overlay_height": 200,
        "transparency": 0.92,
        "position": {"x": 50, "y": 50}
    },
    "analysis": {
        "interval_seconds": 20,
        "max_transcript_length": 3000,
        "min_analysis_length": 20
    },
    "ocr": {
        "enabled": true,
        "max_text_length": 1000,
        "timeout_seconds": 10
    },
    "screen_monitoring": {
        "interval_seconds": 5,
        "min_change_chars": 100,
        "similarity_threshold": 0.85,
        "visual_change_threshold": 0.2,
        "major_change_threshold": 0.4,
        "confidence_threshold": 0.5
    },
    "performance": {
        "ui_update_delay": 100,
        "response_truncate_length": 100,
        "max_actions_displayed": 3
    }
} 